

<div class="ui two column centered grid">
  <div class="column">
        <table class="ui celled striped table">
          <thead>
            <tr><th colspan="3">
              <%= @card.name %>
            </th>
          </tr></thead>
          <tbody>
            <tr>
              <td class="collapsing">ID</td>
              <td><%= @card.id %></td>
            </tr>
            <tr>
              <td>URL</td>
              <td><%= image_tag(@card.url, :class => "ui fluid image") %></td>
            </tr>
            <tr>
              <td>種類</td>
              <td><%= @card.kind %></td>
            </tr>
            <tr>
              <td class="collapsing">説明</td>
              <td><%= @card.description %></td>
            </tr>
            <tr>
              <td>章</td>
        	  <td><%= @card.chapter %></td>
            </tr>
            <tr>
              <td>項</td>
              <td><%= @card.section %></td>
            <tr>
            <tr>
              <td>年</td>
              <td><%= @card.year %></td>
            </tr>
          </tbody>
        </table>
  </div>
</div>