<%= form_for(@character, url: character_path(@character), html: {method: 'patch', class: 'ui form'}) do |f| %>
<div class="ui raised segment">
<div class="ui accordion">
  <div class="active title">
    <i class="dropdown icon"></i>
    編集
  </div>
    <div class="active content">

    <div class="field">
      <label>人物名</label>
      <%= f.text_field :name, class: "" %>
    </div>

    <div class="field">
      <label>期間</label>
      <%= f.text_field :life, class: "" %>
    </div>
    
    <div class="field">
      <label>URL</label>
      <%= f.text_field :url, class: "" %>
    </div>
  
    <div class="field">
      <label>説明</label>
      <%= f.text_area :description, class: '' %>
    </div>

    <div class="field">
      <label>時代</label>
      <%= f.text_field :era, class: '' %>
    </div>
  
  <div class="field">
    <label>出来事</label>
      <%= f.text_field :event, class: '' %>
  </div>

  
  <div class="actions">
    <%= f.submit "更新", class: 'ui button'%>
  </div>
  </div>
  </div>
</div>
<% end %>