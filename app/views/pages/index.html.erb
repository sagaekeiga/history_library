

<div class="ui grid">
  <div class="sixteen wide column"></div>
  <div class="one wide column"></div>
  <div class="ten wide column">
    
    <div class="ui top attached tabular menu">
      <div class="active item" data-tab="1">出来事編</div>
      <div class="item" data-tab="2">人物編</div>
    </div>
    
    
    <div class="ui bottom active attached tab segment" data-tab="1">
      <% @events.each do |event| %>
      <div class="ui top attached segment">
        <%= image_tag(event.url, :class => 'ui middle aligned tiny image', :size => '100x100') %>
        <%= link_to "#{event.description.truncate(100)}", event %>
      </div>
      <% end %>
    </div>

    <div class="ui bottom attached tab segment" data-tab="2">
      <% @characters.each do |character| %>
      <div class="ui top attached segment">
        <%= image_tag(character.url, :class => 'ui middle aligned tiny image', :size => '100x100') %>
        <%= link_to "#{character.description.truncate(100)}", character %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="five wide column"></div>
</div>


<script>
$('.menu .item')
  .tab()
;
</script>